{%  extends "ApplicationBundle::layout.html.twig" %}
{% block navlef %} 
       {% include "ApplicationBundle:Partenaire:menu-partenaire.html.twig" %}      
{% endblock navlef %}

{% block navright %} 
    <div class = 'row'>
		<div class = 'col-sm-12'>
		
	{% if   listeAppelsOffres|length >0    %}
 
        {% for appelOffre in listeAppelsOffres %}
		   <p>
			 Titre:{{ appelOffre.titre }}<br/>
			 Date de fin:{{ appelOffre.datefin |date('d/m/Y') }}<br/>
			Fichier joint:{{appelOffre.fichierjoint}} <a href="{{app.request.basepath}}/uploads/fichierreunion/{{ appelOffre.fichierjoint }}">
				<span class="btn btn-info btn-sm glyphicon glyphicon-download">Télécharger</span>
			</a>
			<hr/>
		</p>
       {%  endfor %}
    {% else %}
	
		<div class = 'alert alert-info text-center'> Aucun appel offre  trouv&eacute;! </div>
	
    {% endif %}
	 </div>
	</div>
{% endblock navright %}

