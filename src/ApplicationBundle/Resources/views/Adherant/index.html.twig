{%  extends "ApplicationBundle::layout.html.twig" %}
{% block home %} 
	<div class="col-md-12">
	{% if(app.session.flashbag.has('notice')) %}
		<div class="alert alert-success"> 
			{{ app.session.flashbag.get('notice')[0] }}
		</div> 
	{% endif %} 
	<!-- {% if(app.session.flashbag.has('error')) %} 
		<div class="alert alert-danger"> 
			{{ app.session.flashbag.get('error')[0] }}
		</div>
	{% endif %} -->
	</div>
    {{ form_start(form, {'attr': {'class': 'form-horizontal  col-md-12'}}) }}
		<div class = 'form-group'>
			<legend>Formulaire d'adhésion</legend>
		</div>
		  {# Les erreurs générales du formulaire. #}
		  {{ form_errors(form) }}
		<div class="form-group">
				{{ form_errors(form.nom) }}
				<div class="col-sm-2">
					{{  form_label(form.nom, "Nom:")  }}
				</div>
				<div class="col-sm-10">
				  {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
		<div class="form-group">
				{{ form_errors(form.prenom) }}
				<div class="col-sm-2">
					{{  form_label(form.prenom, "Prénom:")  }}
				</div>
				<div class="col-sm-10">
				  {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
				</div>
		</div>
		<div class="form-group">
				{{ form_errors(form.adresse) }}
				<div class="col-sm-2">
					{{  form_label(form.adresse, "Adresse:")  }}
				</div>
				<div class="col-sm-10 col-md-10">
				  {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
				</div>
		</div>
		<div class="form-group">
				{{ form_errors(form.telephone) }}
				<div class="col-sm-2">
					{{  form_label(form.telephone, "Téléphone:")  }}
				</div>
				<div class="col-sm-10 col-md-10">
				  {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
				</div>
		</div>
		<div class="form-group">
				{{ form_errors(form.motivation) }}
				<div class="col-sm-2">
					{{  form_label(form.motivation, "Motivation:")  }}
				</div>
				<div class="col-sm-10 col-md-10">
				  {{ form_widget(form.motivation, {'attr': {'class': 'form-control'}}) }}
				</div>
		</div>
			<input style="margin-left:100px;" type="submit"  value = "valider" class="btn btn-primary" />
  {{ form_rest(form) }}

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }} 

{% endblock home %}

