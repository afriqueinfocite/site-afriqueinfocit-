{%  extends "AdminBundle::layout.html.twig" %}
{% block content %}
	{% if   listePartenaires|length >0    %}
         <div class = 'table-responsive' class="table_des_listes">
	<table class = 'table table-hover table-condensed'>
	    <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
				<th>Photo</th>
                <th>Action</th>
			</tr>		
         </thead>
        {% for partenaire in listePartenaires %}
        <tr>
			<td> {{ partenaire.id }} </td>
			<td> {{ partenaire.nom }} </td>
			<td>
				<img src = "{{app.request.basepath}}/uploads/photo/{{ partenaire.photo }}"
				class = 'img-responsive' />
			</td>
			 <td > 
				<a  href="{{  path('modifier_partenaire',{ 'id':  partenaire.id    }) }}"
					class="btn btn-info btn-xs"  title="modifier">
					<span class = 'glyphicon  glyphicon-edit'></span>
                 </a>
				  <a  href="{{  path('supprimer_partenaire',{ 'id':  partenaire.id    })   }}" 
                       class = 'btn btn-danger btn-xs'  title="supprimer">
                       <span  class = 'glyphicon glyphicon-remove'></span>
                  </a>
             </td>
        </tr>
       {%  endfor %}
    </table>
  </div>
    {% else %}
		<div class = 'alert alert-info text-center'> Aucun article  trouv&eacute;! </div>
	
    {% endif %}
{% endblock content %}