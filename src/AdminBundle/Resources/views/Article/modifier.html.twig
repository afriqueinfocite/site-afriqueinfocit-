{%  extends "AdminBundle::layout.html.twig" %}
{% block content %}
	<div class="container">
	{% if(app.session.flashbag.has('notice')) %}
		<div class="alert alert-success"> 
			{{ app.session.flashbag.get('notice')[0] }}
		</div> 
	{% endif %} 
	<!-- {% if(app.session.flashbag.has('error')) %} 
		<div class="alert alert-danger"> 
			{{ app.session.flashbag.get('error')[0] }}
		</div>
	{% endif %} -->
	</div>
	{{ form_start(form, {'attr': {'class': 'form-horizontal  col-md-6 col-md-offset-3'}}) }}
		<div class = 'form-group'>
			<legend>Formulaire d'ajout d'un article</legend>
		</div>
		  {# Les erreurs générales du formulaire. #}
		  {{ form_errors(form) }}
		<div class="form-group">
				{{ form_errors(form.titre) }}
				<div class="col-sm-2">
					{{  form_label(form.titre, "Titre:")  }}
				</div>
				<div class="col-sm-10">
				  {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
		<div class="form-group">
				{{ form_errors(form.description) }}
				<div class="col-sm-2">
					{{  form_label(form.description, "Description:")  }}
				</div>
				<div class="col-sm-10">
				  {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
				</div>
		</div>
		<div class="form-group">
				{{ form_errors(form.date) }}
				<div class="col-sm-2">
					{{  form_label(form.date, "Date:")  }}
				</div>
				<div class="col-sm-10 col-md-10">
				  {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
				</div>
		</div>
		<div class="form-group">
				{{ form_errors(form.photo) }}
				<div class="col-sm-2">
					{{  form_label(form.date, "Photo:")  }}
				</div>
				<div class="col-sm-10 col-md-10">
				  {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
				</div>
		</div>
			<input type="submit"  value = "valider" class="btn btn-primary" />
  {{ form_rest(form) }}

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }} 
{% endblock content %}