{%  extends "AdminBundle::layout.html.twig" %}
{% block content %}
	{% if   articles|length >0    %}
         <div class = 'table-responsive' class="table_des_listes">
	<table class = 'table table-hover table-condensed'>
	    <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Description</th>
				<th>Photo</th>
                <th>Action</th>
			</tr>		
         </thead>
        {% for article in articles %}
        <tr>
			<td> {{ article.id }} </td>
			<td> {{ article.titre }} </td>
			<td> {{ article.description | truncate(500, true, '...') }} </td>
			<td>
				<img src = "{{app.request.basepath}}/uploads/photo/{{ article.photo }}"
				class = 'img-responsive' />
			</td>
			 <td > 
				<a  href="{{  path('modifier_article',{ 'id':  article.id    }) }}"
					class="btn btn-info btn-xs"  title="modifier">
					<span class = 'glyphicon  glyphicon-edit'></span>
                 </a>
				  <a  href="{{  path('supprimer_article',{ 'id':  article.id    })   }}" 
                       class = 'btn btn-danger btn-xs'  title="supprimer">
                       <span  class = 'glyphicon glyphicon-remove'></span>
                  </a>
             </td>
        </tr>
       {%  endfor %}
    </table>
  </div>
    {% else %}
		<div class = 'alert alert-info text-center'> Aucun article  trouv&eacute;! </div>
	
    {% endif %}
{% endblock content %}