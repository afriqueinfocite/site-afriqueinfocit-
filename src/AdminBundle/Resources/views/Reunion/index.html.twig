{%  extends "AdminBundle::layout.html.twig" %}
{% block content %}
	{% if   reunions|length >0    %}
         <div class = 'table-responsive' class="table_des_listes">
	<table class = 'table table-hover table-condensed'>
	    <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Action</th>
			</tr>		
         </thead>
        {% for reunion in reunions %}
        <tr>
			<td> {{ reunion.id }} </td>
			<td> {{ reunion.titre }} </td>
			<td> {{ reunion.date |date('d/m/Y') }} </td>
			 <td> 
				<a  href="{{  path('modifier_reunion',{ 'id':  reunion.id    }) }}"
					class="btn btn-info btn-xs"  title="modifier">
					<span class = 'glyphicon  glyphicon-edit'></span>
                 </a>
				  <a  href="{{ path('supprimer_reunion',{ 'id':  reunion.id    })   }}" 
                       class = 'btn btn-danger btn-xs'  title="supprimer">
                       <span  class = 'glyphicon glyphicon-remove'></span>
                  </a>
             </td>
        </tr>
       {%  endfor %}
    </table>
  </div>
    {% else %}
		<div class = 'alert alert-info text-center'> Aucune RÃ©union  trouv&eacute;! </div>
	
    {% endif %}
{% endblock content %}