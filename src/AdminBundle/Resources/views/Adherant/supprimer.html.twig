{% extends "AdminBundle::layout.html.twig" %}
{% block content %} 

<div class="well">
    <p>Etes-vous certain de supprimer  la démande d'adhésion N°" {{ adherant.id}}"?</p>
    {# On met l'id de l'article dans la route de l'action du formulaire #}
    <form action="{{ path('supprimer_adherant',{'id':adherant.id}) }}" method="POST">
        
        <a href="{{  path('liste_adherant')}}" class="btn  btn-default">
        <i class="glyphicon glyphicon-chevron-left"></i>Retour à la liste
        </a>
        {# Ici j'ai écrit le bouton de soumission à la main #} 
        <input type="submit" value="Supprimer" class="btn btn-danger" /> 
    </form>
</div>
{% endblock %}
