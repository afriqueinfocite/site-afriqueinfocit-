{%  extends "AdminBundle::layout.html.twig" %}
{% block content %}
	{% if   videos|length >0    %}
         <div class = 'table-responsive' class="table_des_listes">
	<table class = 'table table-hover table-condensed'>
	    <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>URL</th>
			</tr>		
         </thead>
        {% for video in videos %}
        <tr>
			<td> {{ video.id }} </td>
			<td> {{ video.titre }} </td>
			<td> {{ video.URL | truncate(200, true, '...') }} </td>
			<td>
				<img  style="width:50px;height:50px;" src = "{{asset('images/videos.png')}}" class = 'img-responsive' />
			</td>
			 <td > 
				<a  href="{{  path('modifier_video',{ 'id':  video.id    }) }}"
					class="btn btn-info btn-xs"  title="modifier">
					<span class = 'glyphicon  glyphicon-edit'></span>
                 </a>
				  <a  href="{{  path('supprimer_video',{ 'id':  video.id    })   }}" 
                       class = 'btn btn-danger btn-xs'  title="supprimer">
                       <span  class = 'glyphicon glyphicon-remove'></span>
                  </a>
             </td>
        </tr>
       {%  endfor %}
    </table>
  </div>
    {% else %}
		<div class = 'alert alert-info text-center'> Aucune vid√©o  trouv&eacute;e! </div>
	
    {% endif %}
{% endblock content %}